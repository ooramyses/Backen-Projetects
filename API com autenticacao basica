from fastapi import FastAPI, Header, HTTPException

app = FastAPI()

API_KEY = "123456"

@app.get("/")
def home():
    return {"status": "ok"}

@app.get("/secure")
def secure_route(x_api_key: str = Header(None)):
    if x_api_key != API_KEY:
        raise HTTPException(status_code=401, detail="unauthorized")
    return {"message": "access granted"}
